{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": ".",
		"allowJs": true
	},
	"include": ["src/**/*.ts", "prisma/seed.ts"],
	"exclude": ["node_modules", "dist"]
}
